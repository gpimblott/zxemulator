{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run ZXEmulator",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ZXEmulator",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "Debug ZXEmulator",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ZXEmulator",
            "args": [
                "-d"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "ZXEmulator Test ROM",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ZXEmulator",
            "args": [
                "-r",
                "${workspaceFolder}/roms/brendanalford.bin"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "ZXEmulator Snapshot",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ZXEmulator",
            "args": [
                "-s",
                "${workspaceFolder}/roms/pacman.z80"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "ZXEmulator TZX",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ZXEmulator",
            "args": [
                "-t",
                "${workspaceFolder}/roms/hobbit.tzx"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "ZXEmulator TZX Fastload",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ZXEmulator",
            "args": [
                "-f",
                "${workspaceFolder}/roms/jetsetwilly.tzx"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        }
    ]
}